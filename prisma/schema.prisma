generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model Feedback {
  id            String   @id @default(cuid())
  title         String
  description   String?
  category      String   @default("general")
  status        String   @default("open") // open|planned|in-progress|done
  votes         Int      @default(0)
  createdAt     DateTime @default(now())
}

model Vote {
  id           String   @id @default(cuid())
  feedBackId       String
  fingerprint  String
  createdAt    DateTime @default(now())

  @@unique([feedBackId, fingerprint])
  @@index([feedBackId])
}